
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:columnCount="1"
    android:background="@android:color/holo_green_dark"
    >
    <GridLayout
        android:rowCount="1"
        android:columnCount="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/select_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:id="@+id/tv_message"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:textSize="20dp" />
    </GridLayout>
    <GridLayout
        android:rowCount="1"
        android:columnCount="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice_1"
            android:id="@+id/bt_voice_1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice_2"
            android:id="@+id/bt_voice_2" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice_off"
            android:id="@+id/bt_voice_off" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_vibration"
            android:id="@+id/bt_vibrate" />
    </GridLayout>
</GridLayout>